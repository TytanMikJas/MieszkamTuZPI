// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

enum InvestmentStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  APPROVED
  REJECTED
}

enum District {
  PSIE_POLE
  FABRYCZNA
  KRZYKI
  STARE_MIASTO
  SRODMIESCIE
  BISKUPIN
  KARLOWICE
  KLECINA
  GAJ
  PILCZYCE
  ZAKRZOW
  PARTYNICE
  OLOWEK
}

enum UserStatus {
  ACTIVE
  EMAIL_NOT_CONFIRMED
  SHADOW_BANNED
  BANNED
  DELETED
}

enum UserRole {
  ADMIN
  USER
  OFFICIAL
}

enum FileType {
  TD
  IMAGE
  DOC
}

enum PostType {
  INVESTMENT
  LISTING
  ANNOUNCEMENT
  COMMENT
}

enum CommentStatus {
  PENDING
  APPROVED
  HIDDEN
  BANNED
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  postType  PostType
  content   String

  createdById   Int
  createdBy     User         @relation(fields: [createdById], references: [id], onDelete: Cascade)
  upvoteCount   Int          @default(0)
  downvoteCount Int          @default(0)
  thumbnail     String       @default("")
  attachments   Attachment[]
  comments      Comment[]    @relation(name: "PostComments")
  comment       Comment?     @relation(name: "PostComment")
  commentCount  Int          @default(0)

  listing      Listing?      @relation(name: "ListingPost")
  investment   Investment?   @relation(name: "InvestmentPost")
  announcement Announcement? @relation(name: "AnnouncementPost")
}

model Investment {
  id                   Int                @id
  updatedAt            DateTime           @updatedAt
  title                String
  slug                 String             @unique
  locationX            Float
  locationY            Float
  area                 String
  address              String
  responsible          String
  isCommentable        Boolean            @default(true)
  status               InvestmentStatus
  badges               Badge[]
  category             InvestmentCategory @relation(fields: [investmentCategoryId], references: [name])
  investmentCategoryId String
  district             District
  post                 Post               @relation(name: "InvestmentPost", fields: [id], references: [id], onDelete: Cascade)
}

model Announcement {
  id            Int                  @id
  updatedAt     DateTime             @updatedAt
  title         String
  slug          String               @unique
  locationX     Float
  locationY     Float
  area          String?
  address       String
  category      AnnouncementCategory @relation(fields: [categoryId], references: [name])
  categoryId    String
  responsible   String
  isCommentable Boolean              @default(true)
  district      District?
  post          Post                 @relation(name: "AnnouncementPost", fields: [id], references: [id], onDelete: Cascade)
}

model Listing {
  id          Int      @id
  updatedAt   DateTime @updatedAt
  title       String
  slug        String   @unique
  locationX   Float
  locationY   Float
  address     String
  sell        Boolean  @default(false)
  price       Float
  surface     Float
  responsible String
  district    District
  post        Post     @relation(name: "ListingPost", fields: [id], references: [id], onDelete: Cascade)
}

model Badge {
  name       String       @id
  icon       String
  primary    String
  secondary  String
  Investment Investment[]
}

model InvestmentCategory {
  name       String       @id
  icon       String
  Investment Investment[]
}

model AnnouncementCategory {
  name         String         @id
  icon         String
  Announcement Announcement[]
}

model Comment {
  id           Int           @id
  post         Post          @relation(name: "PostComment", fields: [id], references: [id], onDelete: Cascade)
  parentNodeId Int
  parentNode   Post          @relation(name: "PostComments", fields: [parentNodeId], references: [id], onDelete: Cascade)
  status       CommentStatus
}

model PostVote {
  userId    Int
  postId    Int
  type      PostVoteType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@id([userId, postId])
  @@index([createdAt])
}

enum PostVoteType {
  UPVOTE
  DOWNVOTE
}

model Attachment {
  id       Int      @id @default(autoincrement())
  postId   Int
  fileName String
  fileType FileType
  postType PostType
  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model User {
  id                          Int                          @id @default(autoincrement())
  createdAt                   DateTime                     @default(now())
  updatedAt                   DateTime                     @updatedAt
  avatar                      String                       @default(uuid())
  firstName                   String
  lastName                    String
  password                    String
  email                       String                       @unique
  newsletter_agreement        Boolean                      @default(false)
  status                      UserStatus                   @default(EMAIL_NOT_CONFIRMED)
  role                        UserRole                     @default(USER)
  Post                        Post[]
  forceChangePassword         Boolean                      @default(false)
  User_EmailVerificationToken User_EmailVerificationToken?
  User_ChangePasswordToken    User_ChangePasswordToken?
}

model User_RefreshToken {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token     String
  userId    Int      @id
}

model User_EmailVerificationToken {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token     String   @unique
  userId    Int      @id
  user      User     @relation(fields: [userId], references: [id])
}

model User_ChangePasswordToken {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token     String   @unique
  userId    Int      @id
  user      User     @relation(fields: [userId], references: [id])
}

model Newsletter {
  id             Int     @id @default(autoincrement())
  name           String
  subject        String
  htmlNewsletter String?
  edjsNewsletter String?
}
